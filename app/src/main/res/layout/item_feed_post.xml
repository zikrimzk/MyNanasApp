<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avatar_container"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="21dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_placeholder"
            android:background="#F5F5F5"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cv_avatar_container"
        app:layout_constraintEnd_toStartOf="@+id/btn_more_options"
        app:layout_constraintStart_toEndOf="@+id/cv_avatar_container"
        app:layout_constraintTop_toTopOf="@+id/cv_avatar_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_username"
                tools:text="zikrimzk"
                android:textColor="@color/text_header"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="#BDBDBD"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_timestamp"
                tools:text="2h"
                android:textColor="#9E9E9E"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="Kuala Lumpur, MY"
            android:textColor="#757575"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        tools:text="Excited to announce the launch of our new pineapple processing facility! #MyNanas #Entrepreneur"
        android:textColor="@color/text_header"
        android:textSize="15sp"
        android:lineSpacingMultiplier="1.2"
        android:autoLink="web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_avatar_container" />

    <HorizontalScrollView
        android:id="@+id/scroll_images_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/tv_caption">

        <LinearLayout
            android:id="@+id/layout_images_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">
        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/btn_like_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_images_container">

        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/selector_pineapple_like" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            tools:text="450"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_images_container">

        <ImageView
            android:id="@+id/icon_views"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_eye_view"
            app:tint="#9E9E9E"/>

        <TextView
            android:id="@+id/tv_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            tools:text="1.2k"
            android:textSize="12sp"
            android:textColor="#757575" />
    </LinearLayout>


    <View
        android:id="@+id/divider_post"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F0F2F5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_like_container"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>