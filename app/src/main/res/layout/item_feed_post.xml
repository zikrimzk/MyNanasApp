<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_avatar_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_avatar_placeholder"
                android:background="#F0F0F0"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/cv_avatar_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_avatar_container"
            app:layout_constraintTop_toTopOf="@+id/cv_avatar_container">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_username"
                    tools:text="zikrimzk"
                    android:textColor="@color/text_header"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_timestamp"
                    tools:text="2h"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="Kuala Lumpur, MY"
                android:textColor="#757575"
                android:textSize="11sp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            tools:text="Excited to announce the launch of our new pineapple processing facility! #MyNanas #Entrepreneur"
            android:textColor="@color/text_header"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.1"
            android:autoLink="web"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_avatar_container" />


        <HorizontalScrollView
            android:id="@+id/scroll_images_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scrollbars="none"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/tv_caption">

            <LinearLayout
                android:id="@+id/layout_images_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerCrop"
                    android:background="#F5F5F5"
                    android:layout_marginEnd="8dp"/>
                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:scaleType="centerCrop"
                    android:background="#F5F5F5"/>

            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/btn_like_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"

            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll_images_container">

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/selector_pineapple_like" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                tools:text="450"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#262626" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll_images_container">

            <ImageView
                android:id="@+id/icon_views"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_eye_view"
                app:tint="#757575"/>

            <TextView
                android:id="@+id/tv_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                tools:text="1.2k views"
                android:textSize="12sp"
                android:textColor="#757575" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>