<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gov_orange_primary"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true">

    <!-- HEADER CONTENT -->
    <TextView
        android:id="@+id/ent_tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ent_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register As"
        android:textColor="#E6FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ent_tv_header_title" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/ent_toggle_group_type"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@+id/ent_btn_type_individual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ent_tv_subtitle"
        app:layout_constraintWidth_percent="0.85">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ent_btn_type_individual"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Individual"
            android:textAllCaps="false"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            android:textColor="@color/gov_orange_primary"
            app:backgroundTint="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ent_btn_type_company"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Company"
            android:textAllCaps="false"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            android:textColor="@color/white"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- SCROLLABLE FORM SHEET -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_bottom_sheet_white"
        android:elevation="20dp"
        android:fillViewport="true"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ent_toggle_group_type">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="120dp">
            <!-- Increased paddingBottom to 120dp allows scrolling higher above keyboard -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:textColor="@color/text_header"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_fullname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                app:helperText="As stated in MyKad / NRIC"
                app:endIconMode="clear_text"
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_ic"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="IC Number"
                app:endIconMode="clear_text"
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_ic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="14"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_dob"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Date of Birth"
                app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                app:startIconTint="@color/gov_orange_primary"
                app:helperText="Auto-filled from IC"
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Phone No."
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Email Address"
                app:endIconMode="clear_text"
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ent_container_business_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEE"
                    android:layout_marginVertical="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Details"
                    android:textColor="@color/text_header"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ent_til_business_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Registered Business Name"
                    app:endIconMode="clear_text"
                    app:boxStrokeColor="@color/gov_orange_primary"
                    app:hintTextColor="@color/gov_orange_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ent_et_business_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ent_til_ssm"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="SSM Registration No."
                    app:endIconMode="clear_text"
                    app:boxStrokeColor="@color/gov_orange_primary"
                    app:hintTextColor="@color/gov_orange_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ent_et_ssm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE"
                android:layout_marginVertical="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Security"
                android:textColor="@color/text_header"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                app:endIconMode="clear_text"
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Password"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ent_password_criteria_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/ent_rule_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Minimum 8 characters"
                    android:textSize="13sp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#888"/>

                <TextView
                    android:id="@+id/ent_rule_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Upper &amp; Lower case letters"
                    android:textSize="13sp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#888"/>

                <TextView
                    android:id="@+id/ent_rule_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• At least 1 number &amp; 1 special char"
                    android:textSize="13sp"
                    android:textColor="#888"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ent_til_confirm_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Confirm Password"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="@color/gov_orange_primary"
                app:hintTextColor="@color/gov_orange_primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ent_et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ent_btn_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:text="Complete Registration"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/gov_orange_primary"
                app:cornerRadius="8dp"
                app:elevation="4dp"
                app:rippleColor="#33FFFFFF"/>

            <TextView
                android:id="@+id/ent_tv_login_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Back to Log In"
                android:textAlignment="center"
                android:textColor="@color/text_body"
                android:textSize="14sp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>