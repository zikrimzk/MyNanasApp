<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="12dp"
    android:paddingBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image_base"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:minWidth="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder_versatile" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_gradient_top_shadow"
            android:gravity="top" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btn_remove_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_circle_black_transparent"
        android:elevation="4dp"
        android:padding="6dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/white" />

</FrameLayout>